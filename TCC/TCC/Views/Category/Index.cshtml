@model IEnumerable<TCC.Models.Category>

<title>@ViewBag.Title</title>

<h2>@ViewBag.Title</h2>

<button type="button" class="btn btn-primary">@Html.ActionLink("Adicionar", "Create")</button>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Descrição")
            </th>
            <th>
                @Html.DisplayName("Ativo")
            </th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Active)
                </td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.Id })" title="Editar"><i class="far fa-edit"></i></a>
                    <a href="javascript:void(0)" onclick="Delete(@item.Id, '@Url.Action("Delete")')" title="Remover"><i class="fas fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
