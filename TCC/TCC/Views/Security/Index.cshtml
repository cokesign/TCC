@model TCC.ViewModels.LoginViewModel
@{
    Layout = null;
}

@Styles.Render("~/Content/css")
@Styles.Render("~/Plugins/css")
@Styles.Render("~/Index/css")
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
@Scripts.Render("~/bundles/modernizr")

<div class="container">
    <div class="row">
        <div class="col-md-12 col-lg-6 mx-auto">
            <div class="card card-signin my-5">
                <div class="card-body">
                    <h5 class="card-title text-center">Faca login</h5>
                    @using (Html.BeginForm("Login", "Security", FormMethod.Post))
                    {
                        <div class="form-group">
                            @Html.LabelFor(f => f.Login)
                            @Html.TextBoxFor(f => f.Login, htmlAttributes: new { @class = "form-control" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(f => f.Password)
                            @Html.PasswordFor(f => f.Password, htmlAttributes: new { @class = "form-control" })
                        </div>

                        <div class="custom-control custom-checkbox mb-3">
                            <input type="checkbox" class="custom-control-input" id="customCheck1">
                            <label class="custom-control-label" for="customCheck1">Lembre de mim?</label>
                        </div>
                        <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Login</button>
                        <hr class="my-4">
                        <button class="btn btn-lg btn-google btn-block text-uppercase" type="submit"><i class="fab fa-google mr-2"></i> Login com Google</button>
                        <button class="btn btn-lg btn-facebook btn-block text-uppercase" type="submit"><i class="fab fa-facebook-f mr-2"></i> Login com Facebook</button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
