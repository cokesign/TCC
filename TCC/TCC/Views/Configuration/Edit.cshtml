@model TCC.ViewModels.ConfigurationViewModel

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Configuracoes</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(m => m.TipoRega, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EnumDropDownListFor(m => m.TipoRega, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.TipoRega, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Value, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Value, htmlAttributes: new { @class = "form-control", @type = "number" })
                    @Html.ValidationMessageFor(m => m.Value, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-auto">
                <button type="submit" class="btn btn-primary">Salvar</button>
                <button type="button" class="btn btn-primary">@Html.ActionLink("Voltar", "Index")</button>
            </div>
        </div>
    </div>
}
